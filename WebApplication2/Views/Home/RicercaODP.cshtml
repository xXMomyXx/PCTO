@model HomePageViewModel
@{
    ViewData["Title"] = "Ricerca ODP";
    var imageUrl = "";
}
<div class="d-flex justify-content-center mt-5">
    <form id="searchArticlesForm" onsubmit="return false;" class="p-4 rounded shadow-sm" style="background-color: white; max-width: 700px; width: 100%;">
        <div class="d-flex justify-content-center gap-4 mb-3">
            <div class="d-flex flex-column align-items-center" style="width: 300px;">
                <label for="searchArticleInput" class="form-label text-center w-100" style="color: black;">ID ODP</label>
                <input type="text" id="searchArticleInput" placeholder="Inserisci ID ODP" class="form-control text-center" />
            </div>
            <div class="d-flex flex-column align-items-center" style="width: 300px;">
                <label for="searchCenterInput" class="form-label text-center w-100" style="color: black;">Reparto</label>
                <select id="searchCenterInput" class="form-select text-center" style="width: 100%;">
                    <option></option>
                    @foreach (var centerType in Model.Centers)
                    {
                        <option value="@centerType">@centerType</option>
                    }
                </select>
            </div>
        </div>

        <div class="d-flex justify-content-center">
            <button id="searchButton" type="button" class="btn btn-primary w-100" style="max-width: 300px;">Cerca</button>
        </div>
    </form>
</div>
<div id="selected-pairs-container" class="d-flex flex-wrap gap-2 justify-content-center my-3"></div>
<div id="images-container" class="container mt-4">
    <div class="row g-3 justify-content-center"></div>
</div>

<div class="d-flex justify-content-center mt-4">
    <div class="text-center">
        <img id="materialImage" src="@imageUrl" alt="Material Image" style="display:@(string.IsNullOrEmpty(imageUrl) ? "none" : "block"); max-width: 100%; height: auto;" />
        <div id="imagePlaceholder" style="color: gray; font-style: italic;">
            Scrivi un ID ODP e seleziona un reparto per trovare l'immagine
        </div>
    </div>
</div>

<!-- Image Modal -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <img id="modalImage" src="" class="img-fluid" alt="Preview">
            </div>
        </div>
    </div>
</div>
