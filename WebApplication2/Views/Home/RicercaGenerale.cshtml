@model HomePageViewModel
@{
    ViewData["Title"] = "Ricerca Generale";
}

<div class="d-flex justify-content-center mt-1" style="gap: 8rem;">
    <form class="px-3 py-4 rounded shadow-sm d-flex flex-column align-items-center" style="background-color: white; max-width: 430px;">
        <label for="options" class="form-label text-center w-100" style="color: black;">Scegli un articolo</label>

        <!-- Dropdown -->
        <select id="options" class="form-select text-center" style="width: 400px;"></select>

        <!-- Textarea for bulk input -->
        <textarea id="bulkInput" class="form-control mt-2" rows="4" placeholder="Inserisci un codice articolo per riga" style="width: 400px; display: none;"></textarea>

        <!-- Checkbox toggle -->
        <div class="form-check mt-2">
            <input class="form-check-input" type="checkbox" id="toggleBulkInput">
            <label class="form-check-label" for="toggleBulkInput" style="color:black">
                Attiva ricerca multipla
            </label>
        </div>
    </form>

    <form class="px-3 py-4 rounded shadow-sm d-flex flex-column align-items-center" style="background-color: white; max-width: 430px;">
        <label for="options1" class="form-label text-center w-100" style="color: black;">Scegli un reparto</label>
        <select id="options1" name="another-options" class="form-select text-center" style="width: 400px;">
            <option></option>
            @foreach (var centerType in Model.Centers)
            {
                <option value="@centerType">@centerType</option>
            }
        </select>
    </form>
</div>

<div class="d-flex flex-column align-items-center mt-3 gap-2">
    <button id="addPairButton" class="btn btn-primary" style="font-family: 'Raleway', sans-serif; font-weight: 200;">
        AGGIUNGI IMMAGINE
    </button>

    <div id="clearAllWrapper" style="display: none;">
        <button id="clearAllPairs" class="btn btn-outline-danger btn-sm">
            Rimuovi tutte le immagini
        </button>
    </div>
</div>

<div id="images-container" class="container mt-4">
    <div class="row justify-content-center g-4">
    </div>
    <div id="imagePlaceholder" class="text-center text-muted fst-italic py-4">
        Seleziona un articolo e un reparto per ottenere l'immagine corrispondente.
    </div>
</div>

<!-- Image Modal -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <img id="modalImage" src="" class="img-fluid" alt="Preview">
            </div>
        </div>
    </div>
</div>
<div class="d-flex justify-content-center mt-3">
    <button id="downloadAllButton" class="btn btn-success" style="display: none;">
        Scarica tutte le immagini
    </button>
</div>
